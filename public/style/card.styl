.linkpv section.photos-list
  margin-left 0

.card.card-html5-video
  .vplay
    background #000

.card.card-big
  font-size 1em

  .card-text
    padding 10px

  .vplay
    float none

  h3
    font-size 24px

  img.card-image
    width 100%
    max-height 600px
    object-fit cover
    max-width none
    object-position 0 20%
    margin 0
    float none

.card audio
  width 100%

.card.card-iframe, .card.card-html5-video, .card.card-error, .card.card-photo
  box-shadow none
  background inherit

.card
  font-family 'Helvetica Neue', Helvetica, Arial
  font-size 1em
  line-height 1.3
  transition 0.3s border, background
  background #fff
  box-shadow 0 2px 2px 0 rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.2), 0 1px 5px 0 rgba(0,0,0,.12)
  overflow hidden
  border-radius 3px

  &.card-small
    height 125px
    font-size 0.9rem
    
    .author
      display none

  .vplay
    position relative
    float left
    overflow hidden
    display inline-grid
    
    img
      float none

    span:hover
      color rgb(255,255,255)

    span.btn
      position absolute
      top 50%
      left 50%
      transform: translate(-50%, -40%);
      cursor pointer
    
      i.fa-circle
        opacity 0.7
        color rgb(29, 161, 242)

  .card-text
    padding 5px 5px 0 5px
    display block
    word-break break-word
    word-wrap break-word
    hyphens auto

  a
    font-weight normal
    color #333
    text-decoration none
    transition 0.3s background

  > a
    border-spacing 10px 0
    display block

  > a:hover
    background #fcfcfc

  iframe
    border none
    width 100%

  .favicon
    width 12px
    height 12px
    margin-right 5px
    vertical-align top

  p
    margin 0.3em 0

  .author
    font-size 0.7em

  .fav
    margin-top 8px
    text-transform uppercase
    font-size 0.6em
    line-height 14px
    letter-spacing 0.3px

  h3
    margin -1px 0 4px 0
    font-size 1em

  img
    &.card-image.show
      opacity 1

    &.card-image
      max-width 250px
      max-height 125px
      float left
      margin-right 10px
      opacity 0
      transition 0.5s opacity

  video
    max-height 300px

.card::after, .card a::after
  content ""
  display block
  clear both


.dl-container
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background rgba(255,255,255,0.95)
  z-index 10000
  display flex
  justify-content center
  align-items center
  
  .card-text
    display none

  video, iframe
    max-width 90%
    max-width 90vw
    max-height 90%
    max-height 90vh
    width 90%
    width 90vw
    height 90%
    height 90vh
    border none

  .viewer-close:hover
    color #222
    border-color #222

  .viewer-close
    position absolute
    top 5px
    right 5px
    width 32px
    height 32px
    color #999
    font-size 27px
    font-style normal
    text-align center
    cursor pointer
    transition color 0.3s, border-color 0.3s
  
  .dl-button-left
    left 10px

  .dl-button-right
    right 10px

  .dl-button:hover
    color #aaa

  .dl-button
    position absolute
    top 50%
    font-size 72px
    color #ddd
    cursor pointer
    transition 0.3s color
